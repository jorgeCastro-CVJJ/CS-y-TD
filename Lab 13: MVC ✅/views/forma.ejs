<%- include('templates/head.ejs') %>
<header class="hero">
    <div class="hero-body">
        <h1 class="title">
            Forma Lab 11 
        </h1>
        <p class="subtitle"><a href="/"> <- Regresar</a></p>
    </div>
</header>
<main class="section">
    <div class="container">
        <form action="" method="POST">
            <div class="field ">
                <label class="label">Nombre</label>
                <div class="control has-icons-left">
                    <input class="input" type="text" name="nombre" placeholder="Miguel de Cervantes">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>
            <div class="field ">
                <label class="label">Correo</label>
                <div class="control has-icons-left">
                    <input class="input" type="email" name="correo" placeholder="mcervantes@tec.mx">
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                </div>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Submit</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light" type="reset" value="Reset">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</main>
<%- include('templates/foot.ejs') %>